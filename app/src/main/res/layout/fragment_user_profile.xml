<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_screen_horizontal"
        android:paddingEnd="@dimen/padding_screen_horizontal"
        android:paddingTop="@dimen/padding_screen_vertical_top"
        android:paddingBottom="@dimen/padding_screen_vertical_bottom">

        <!-- Título a la izquierda -->
        <TextView
            android:id="@+id/textView_screenTitle"
            style="@style/Text_H1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:importantForAccessibility="yes"
            android:text="Perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 2. INFORMACIÓN DEL USUARIO (Círculo, Nombre, Editar perfil) -->
        <LinearLayout
            android:id="@+id/layout_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/textView_screenTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Imagen/Iniciales del Usuario -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/gray_light">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CG"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Nombres y Enlace de Edición -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/text_user_name"
                    style="@style/Text_H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carlos Guillermo Castro Jiménez" />

                <TextView
                    android:id="@+id/text_edit_profile"
                    style="@style/Text_Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar perfil >"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/micuenta_perfil"
            style="@style/Text_H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_account"
            app:layout_constraintTop_toBottomOf="@+id/layout_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Enlace 4.1: Direcciones -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@+id/micuenta_perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <!-- Icono inicial -->
                <ImageView
                    android:id="@+id/icon_start"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ubication"
                    android:contentDescription="..."
                    app:tint="@color/gray_dark" />

                <!-- Texto del enlace -->
                <TextView
                    android:id="@+id/text_link"
                    style="@style/Text_H3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Ubicaciones"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <!-- Icono final (flecha) -->
                <ImageView
                    android:id="@+id/icon_end"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right_profile"
                    android:contentDescription="..."
                    app:tint="@color/gray_dark" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enlace 4.1: Direcciones -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menuUbication2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@+id/menuUbication"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <!-- Icono inicial -->
                <ImageView
                    android:id="@+id/icon_start2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ubication"
                    android:contentDescription="..."
                    app:tint="@color/gray_dark" />

                <!-- Texto del enlace -->
                <TextView
                    android:id="@+id/text_link2"
                    style="@style/Text_H3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Ayuda"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <!-- Icono final (flecha) -->
                <ImageView
                    android:id="@+id/icon_end2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right_profile"
                    android:contentDescription="..."
                    app:tint="@color/gray_dark" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>