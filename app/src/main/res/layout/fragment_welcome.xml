<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_screen_horizontal"
    android:paddingBottom="@dimen/padding_screen_vertical"
    android:paddingTop="@dimen/padding_screen_vertical"
    tools:context="ui.auth.WelcomeFragment">

    <!-- Logo de la imagen -->
    <ImageView
        android:id="@+id/imageViewLogo"
        style="@style/Image_Logo"
        android:src="@drawable/img_logoapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Eslogan  -->
    <TextView
        android:id="@+id/textViewSlogan"
        style="@style/Text_H1"
        android:text="@string/slogan_text"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWelcomeRegister"
        style="@style/ButtonFill"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/spacing_form_s"
        android:text="@string/some_text"
        app:layout_constraintBottom_toTopOf="@id/buttonWelcomeLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWelcomeLogin"
        style="@style/ButtonOutline"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/some_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
