<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_screen_horizontal"
        android:paddingTop="@dimen/padding_screen_vertical_top"
        android:paddingEnd="@dimen/padding_screen_horizontal"
        android:paddingBottom="@dimen/padding_screen_vertical_bottom">

        <!-- Texto de ubicación -->
        <TextView
            android:id="@+id/textView_screenTitle"
            style="@style/Text_LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edificio E, aula 4 >"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Barra de búsqueda -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SearchBarStyle"
            style="@style/SearchBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="¿Qué se te antoja hoy?"
            app:endIconTint="@color/gray_dark"
            app:layout_constraintTop_toBottomOf="@id/textView_screenTitle"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/gray_dark">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/SearchInputTextStyle"
                android:imeOptions="actionSearch"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Encabezado de sección -->
        <TextView
            android:id="@+id/textView_popularServicesTitle"
            style="@style/Text_H3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:text="Vendedores destacados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SearchBarStyle" />

        <!-- Carrusel de tarjetas dentro de la sección-->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView_popularServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_form_m"
            android:layout_marginBottom="@dimen/spacing_form_m"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/textView_popularServicesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout_popularServiceCardsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_generalDoctor"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_generalDoctor"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo_antojatec"
                            android:contentDescription="Vamos a ver qué show" />

                        <TextView
                            android:id="@+id/textView_generalDoctorTitle"
                            style="@style/Text_Body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Consulta General"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_generalDoctorDescription"
                            style="@style/Text_LabelSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="8dp"
                            android:text="Diagnóstico y tratamiento básico de enfermedades comunes."
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Aquí puedes agregar más CardViews con layout_marginEnd para separación -->
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>