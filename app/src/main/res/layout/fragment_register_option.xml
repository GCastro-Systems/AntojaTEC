<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_screen_horizontal"
    android:paddingBottom="@dimen/padding_screen_vertical"
    android:paddingTop="@dimen/padding_screen_vertical"
    tools:context="ui.auth.WelcomeFragment">

    <!-- Logo de la imagen -->

    <!-- Eslogan  -->

    <ImageView
        android:id="@+id/imageViewLogo"
        style="@style/Image_Logo"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_logoapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSlogan"
        style="@style/Text_H1"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/inciar_sesion_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWelcomeRegister"
        style="@style/ButtonPrimary"
        android:layout_width="300dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="4dp"
        android:text="@string/Boton_registrarse_register_option"
        app:layout_constraintBottom_toTopOf="@id/buttonWelcomeLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonWelcomeLogin"
        style="@style/ButtonOutlinedCustom"
        android:layout_width="300dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="140dp"
        android:text="@string/Boton_iniciar_sesion_register_option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#A91212" />

    <TextView
        android:id="@+id/registro"
        style="@style/Text_H1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="304dp"
        android:gravity="center"
        android:text="@string/no_tienes_cuenta"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>