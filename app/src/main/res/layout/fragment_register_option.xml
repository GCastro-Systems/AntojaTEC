<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_screen_horizontal"
    android:paddingTop="@dimen/padding_screen_vertical"
    android:paddingBottom="@dimen/padding_screen_vertical"
    tools:context="ui.auth.LoginOptionFragment">

    <!-- ícono de regreso (flecha) -->
    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/onBackButton"
        android:layout_marginTop="@dimen/margin_null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        style="@style/Image_Logo"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto de registro -->
    <TextView
        android:id="@+id/textViewLoginOptionTitle"
        style="@style/Text_H2"
        android:layout_marginTop="@dimen/margin_l"
        android:text="@string/register_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo" />

    <!-- Botón de Registro con email -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegisterOptionEmail"
        style="@style/Button_Fill"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Continuar con mi email"
        app:icon="@drawable/ic_email"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toTopOf="@id/buttonRegisterWithGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón de login con Google -->
    <!-- Botón de registro con Google -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegisterWithGoogle"
        style="@style/Button_Outline"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Continuar con Google"
        app:icon="@drawable/ic_google"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto "¿Ya tienes una cuenta?" -->
    <TextView
        android:id="@+id/textViewAlreadyHaveAccount"
        style="@style/Text_Body"
        android:layout_marginTop="@dimen/margin_m"
        android:text="¿Ya tienes una cuenta?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRegisterWithGoogle" />

    <TextView
        android:id="@+id/textViewSignInLink"
        style="@style/Text_Body"
        android:text="Inicia sesión"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAlreadyHaveAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>