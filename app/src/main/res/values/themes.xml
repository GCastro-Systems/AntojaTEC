<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AntojaTEC" parent="Theme.Material3.Light.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/mint_green_soft_background</item>
        <item name="colorOnPrimaryContainer">@color/near_black</item>

        <item name="colorSecondary">@color/cool_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/cool_blue_nav_background</item>
        <item name="colorOnSecondaryContainer">@color/near_black</item>

        <!-- Fondo y superficie -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/near_black</item>
        <item name="colorSurfaceVariant">@color/gray_light</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>

        <!-- Error -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_soft</item>
        <item name="colorOnErrorContainer">@color/white</item>

        <!-- AppBar y Status bar -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- íconos oscuros en status bar -->

        <!-- Tipografía global -->
        <item name="textAppearanceHeadlineLarge">@style/Text_H1</item>
        <item name="textAppearanceHeadlineMedium">@style/Text_H2</item>
        <item name="textAppearanceBodyMedium">@style/Text_Body</item>
        <item name="textAppearanceLabelLarge">@style/Text_LabelLarge</item>

        <!-- Botones -->
        <item name="materialButtonStyle">@style/Button_Fill</item>
        <item name="materialButtonOutlinedStyle">@style/Button_Outline</item>
    </style>

    <!-- Tema principal de la app -->
    <style name="Theme.AntojaTEC" parent="Base.Theme.AntojaTEC" />

</resources>
